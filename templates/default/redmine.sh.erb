#!/bin/bash

LANG=ja_JP.UTF-8
RAILS_ENV=$1
CMD=$2
if [ ! $RAILS_ENV ]; then
    RAILS_ENV="development"
fi
if [ ! $CMD ]; then
    CMD="start"
fi

# Load rvm
[[ -s "/usr/local/rvm/scripts/rvm" ]] && . "/usr/local/rvm/scripts/rvm"
BASEDIR="<%= @path %>"
PIDFILE="$BASEDIR/tmp/pids/unicorn.pid"
CONFIGFILE="$BASEDIR/config/unicorn.config.rb"
DAEMONSCRIPT="bundle exec unicorn_rails"
DAEMONOPTIONS="-c $CONFIGFILE -E $RAILS_ENV -D"

export BUNDLE_GEMFILE=$BASEDIR/Gemfile

rvm use "<%= @rvm_name %>"

case "$CMD" in
  start)
    cd $BASEDIR
    $DAEMONSCRIPT $DAEMONOPTIONS
    ;;
  stop)
    kill `cat -- $PIDFILE`
    ;;
  reload)
    kill -s HUP `cat -- $PIDFILE`
    ;;
  restart)
    kill `cat -- $PIDFILE`
    sleep 3
    cd $BASEDIR
    $DAEMONSCRIPT $DAEMONOPTIONS
    ;;
  *)
    echo "Usage: redmine.sh {start|stop|restart}"
    exit 1
esac

exit 0
